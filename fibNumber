// write a function that takes a value and returns the
// next Fibonacci value
// edited version ***

    var fibNum = 1;
    var fibArrayNum = 1;
    var fibArray = [0];

    for (i = 0; i < index; i++) {

      fibArray.push(fibNum);
      fibNum = fibArray[fibArrayNum - 1] + fibArray[fibArrayNum];
      fibArrayNum += 1;

    }

    return fibArray;
}

console.log(fibNumber(8));

var assert = require('assert');

describe('fibNumber', function() {
  it('should return 1 when called with 1'), function() {
    assert.equal(fibNumber(1), 1);
  }
});
